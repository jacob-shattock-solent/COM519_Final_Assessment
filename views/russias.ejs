<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Russia-Ukraine</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/album.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
        <h1 class="mx-auto"> Russia Losses</h1>
        <table class="table table-striped custab">

          <thead>
              <tr>
                  <th>Equipment</th>
                  <th>Model</th>
                  <th>Total Losses</th>
                  <th>Captured</th>
                  <th>Destroyed</th>
                  <th><a class='btn btn-success btn-xs' href="/create-russia/"><span class="glyphicon glyphicon-create"></span> Create</a> </th>
              </tr>
          </thead>
      
            <% russias.forEach(function(russia){ %>
              <tr>
                <td><%=  russia.equipment  %></td>
                <td><%=  russia.model  %></td>
                <td><%=  russia.losses_total  %></td>
                <td><%=  russia.captured  %></td>
                <td><%=  russia.destroyed  %></td>
                <td class="text-center"><a class='btn btn-primary btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="/russias/delete/<%= russia.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
              </tr>
            <% }); %>
          
    </table>
    </div>
    
    

    <%- include('common/footer') -%>
  </body>
</html>
